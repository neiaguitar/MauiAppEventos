<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.ResumoEventoPage"
             Title="Resumo do Evento">

    <VerticalStackLayout Padding="10" Spacing="10">
        <Label Text="Resumo do Evento" FontSize="Large" />
        <Label Text="{Binding Nome}" />
        <Label Text="{Binding DataInicio, StringFormat='Data de Início: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding DataTermino, StringFormat='Data de Término: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding NumeroParticipantes, StringFormat='Número de Participantes: {0}'}" />
        <Label Text="{Binding Local, StringFormat='Local: {0}'}" />
        <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por Participante: {0:C}'}" />
        <Label Text="{Binding DuracaoEmDias, StringFormat='Duração: {0} dias'}" />
        <Label Text="{Binding CustoTotal, StringFormat='Custo Total: {0:C}'}" />
    </VerticalStackLayout>

</ContentPage>
